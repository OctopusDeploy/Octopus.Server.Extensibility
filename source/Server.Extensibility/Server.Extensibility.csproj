    <PackageReference Include="System.Security.Claims" Version="4.3.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\Node.Extensibility\Node.Extensibility.csproj" />
  </ItemGroup>

  </Project>